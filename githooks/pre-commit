#!/bin/bash
# Pre-commit hook for yt-summarizer
# ALWAYS runs pre-commit validation in both CI and local environments
# Blocks commits if pre-commit checks fail
# Use --no-verify to bypass (not recommended)

set -e  # Exit on error

# Color codes for terminal output
RED='\033[0;31m'
GREEN='\033[0;32m'
CYAN='\033[0;36m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Go to repository root
cd "$(git rev-parse --show-toplevel)" || {
    echo -e "${RED}ERROR: Could not find repository root${NC}"
    exit 1
}

echo ""
echo "========================================"
echo -e "${CYAN}RUNNING PRE-COMMIT VALIDATION${CYAN}"
echo "========================================"
echo ""

# Check if pre-commit command exists
if ! command -v pre-commit &> /dev/null; then
    echo -e "${RED}ERROR: pre-commit not found on PATH${NC}"
    echo "Install pre-commit: pip install pre-commit"
    exit 1
fi

# Run pre-commit with auto-fix
echo -e "${CYAN}Running pre-commit --all-files --verbose...${NC}"
if pre-commit run --all-files --verbose; then
    EXIT_CODE=0
else
    EXIT_CODE=$?
fi

if [ $EXIT_CODE -ne 0 ]; then
    echo ""
    echo "========================================"
    echo -e "${RED}PRE-COMMIT VALIDATION FAILED${RED}"
    echo "========================================"
    echo ""
    echo -e "${RED}Your commit has been BLOCKED.${NC}"
    echo ""
    echo "The pre-commit checks found issues that must be fixed before committing."
    echo ""
    echo -e "${YELLOW}How to fix:${NC}"
    echo "  1. Review error messages above"
    echo "  2. Run 'pre-commit run --all-files --verbose' to auto-fix issues"
    echo "  3. Review fixes with 'git diff'"
    echo "  4. Add the fixed files: git add ."
    echo "  5. Commit again: git commit ..."
    echo ""
    echo -e "${RED}To bypass ALL git hooks (not recommended):${NC}"
    echo -e "  ${YELLOW}git commit --no-verify ...${NC}"
    echo ""
    exit $EXIT_CODE
else
    echo ""
    echo "========================================"
    echo -e "${GREEN}PRE-COMMIT VALIDATION PASSED${GREEN}"
    echo "========================================"
    echo ""
    exit 0
fi
